<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">\

            <LinearLayout
                android:layout_width="30dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tampilan_waktu"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="waktu kejadian"
                    android:layout_margin="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tampilan_lokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lokasi kejadian"
                    android:layout_marginLeft="10dp"/>

                <RatingBar
                    android:id="@+id/rating_tampilan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:numStars="5"
                    android:rating="4"
                    android:layout_margin="10dp"
                    android:progressTint="#FFC34C"
                    style="?android:attr/ratingBarStyleSmall"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="anda belum melakukan review"
                    android:layout_margin="10dp"
                    android:id="@+id/no_review"
                    android:visibility="gone"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/selek"
                android:layout_weight="1"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_next"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

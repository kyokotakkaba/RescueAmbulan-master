<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abyandafa.rescueambulance.Notification.Notification">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gradien_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/jauh"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kejadian"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE BLUE"
                android:layout_marginLeft="30dp"
                android:textSize="25dp"
                android:id="@+id/textView10"
                />
            <Button
                android:layout_width="330dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:background="@color/field_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="9dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6dp"
                android:text="agngnlengoesgnpshg"
                android:id="@+id/lokasikorban"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pertanyaan_notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apakah anda bersedia memberikan pertolongan?"
                android:textAlignment="center"
                android:background="@color/dekat_pertanyaan"
                android:textColor="@android:color/white"
                android:padding="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/imageView4"
                    android:layout_marginStart="56dp"
                    android:src="@drawable/ic_yes"
                    android:id="@+id/imageView3"/>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="59dp"
                    android:src="@drawable/ic_no" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        app:cardCornerRadius="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"


            android:background="@android:color/white">

            <ImageView
                android:visibility="gone"
                android:id="@+id/logo_notif"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/dekat_logo" />
            <ImageView
                android:id="@+id/code_blue_photo"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="CODE BLUE"-->
                <!--android:id="@+id/judul_notif"-->
                <!--android:layout_gravity="center"-->
                <!--android:textSize="20dp"-->
                <!--android:textStyle="bold"-->
                <!--android:paddingTop="4dp"-->
                <!--android:textColor="@color/notif_dekat"/>-->
        </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
